{% extends 'base.html.twig' %}

{% block body %}
    <!-- Post Header -->
    <header class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ title }}</h1>
                        <h2 class="subheading">{{ subtitle }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    <div class="well">
                        {% block form %}{% endblock %}
                    </div>

                </div>
            </div>
        </div>
    </article>

    <hr>
{% endblock %}